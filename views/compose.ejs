<%- include('partials/header'); -%>
<h1>
  Compose
</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <!-- <input id="composer" type="text" name="postTitle" placeholder="Write your text here."> -->
    <!-- <input type="submit" value="Publish"> -->
    <label for="composeTitle">Title</label>
    <input type="text" class="form-control mb-2" name="postTitle" id="composeTitle" aria-describedby="titleHelp" placeholder="Write your title here" autofocus maxlength="100" minlength = '10' required>
    <small class="form-text text-muted">Write between 10-50 characters </small>
  </div>

  <div class="form-group">
    <label for="composePost">Post</label>
    <textarea style = 'resize: vertical' class="form-control" id="composePost" name="postBody" rows="5" placeholder="Write your post with min 100 characters" minlength = '100' required></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer'); -%>
